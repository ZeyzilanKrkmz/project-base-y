
//usr/bin/env node

require('dotenv').config();
const http = require('http');
const app = require('../app');
const DB = require('../db/Database');

const port = normalizePort(process.env.PORT || '3001');
app.set('port', port);

(async () => {
  try {
    // DB baÄŸlantÄ±sÄ±nÄ± ister burada aktif et, ister ÅŸimdilik yorum satÄ±rÄ± yap
    console.log('ğŸŸ¡ DB connecting...');
    await DB.connect();
    console.log('ğŸŸ¢ DB connected');

    const server = http.createServer(app);

    // 0.0.0.0 => hem localhost hem LAN eriÅŸimine izin verir
    server.listen(port, '0.0.0.0', () => {
      console.log(`âœ… Server running on http://localhost:${port}`);
    });

    server.on('error', onError);

  } catch (err) {
    console.error('âŒ DB connection failed:', err.message);
    process.exit(1);
  }
})();

function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') throw error;

  if (error.code === 'EADDRINUSE') {
    console.error(`âŒ Port ${port} kullanÄ±mda. BaÅŸka bir uygulama kapatÄ±lmalÄ± veya PORT deÄŸiÅŸtirilmelidir.`);
    process.exit(1);
  }
  throw error;
}

