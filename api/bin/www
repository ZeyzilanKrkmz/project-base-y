#!/usr/bin/env node

require('dotenv').config();
const http = require('http');
const app = require('../app');
const DB = require('../db/Database');


var port=3001;
app.set('port', port);

(async () => {
  try {
    await DB.connect();              // << önce DB
    const server = http.createServer(app);
    server.listen(port, '0.0.0.0');  // sonra server
    server.on('listening', () => console.log(`✅ Server running on http://localhost:${port}`));
    server.on('error', onError);
  } catch (err) {
    console.error('❌ DB connection failed:', err.message);
    process.exit(1); // burada çıkmak makul, çünkü DB yoksa API anlamsız
  }
})();

function normalizePort(val) {
  const p = parseInt(val, 10);
  if (isNaN(p)) return val;
  if (p >= 0) return p;
  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') throw error;
  if (error.code === 'EADDRINUSE') {
    console.error(`❌ Port ${port} kullanımda. Süreci kapat veya PORT'u değiştir.`);
    process.exit(1);
  }
  throw error;
}
